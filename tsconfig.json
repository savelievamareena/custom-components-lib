{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [],
    "declaration": true
  },
  "exclude": [
    "node_modules/*",
    "dist",
    "./src/stories"
  ],
  "include": [
    "src/**/*",
    "webpack.config.ts",
    ".eslintrc.js",
    "declarations.d.ts"
  ]
}